<Window x:Class="Tcc.Gerenciamento.View.ServicoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tcc.Gerenciamento.View"
        mc:Ignorable="d"
        Title="ServicoWindow" Height="300" Width="300">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="{Binding MessageLoop, Mode=TwoWay}" Margin="12" FontSize="18" Foreground="Black"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
